CREATE TABLE movie (
    id SERIAL PRIMARY KEY,
    imdb_id VARCHAR(255),
    title VARCHAR(255),
    year VARCHAR(10),
    rated VARCHAR(50),
    released VARCHAR(50),
    runtime VARCHAR(50),
    genre VARCHAR(255),
    director VARCHAR(255),
    writer VARCHAR(255),
    actors VARCHAR(255),
    plot TEXT,
    language VARCHAR(255),
    country VARCHAR(255),
    awards VARCHAR(255),
    poster_url VARCHAR(500),
    metascore VARCHAR(50),
    imdb_rating VARCHAR(10),
    imdb_votes VARCHAR(50),
    type VARCHAR(50),
    dvd VARCHAR(50),
    box_office VARCHAR(50),
    production VARCHAR(255),
    website VARCHAR(255)
);

CREATE TABLE movie_rating (
    id SERIAL PRIMARY KEY,
    source VARCHAR(255),
    value VARCHAR(50),
    movie_id INT REFERENCES movie(id) ON DELETE CASCADE
);